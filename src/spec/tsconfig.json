{
  "compilerOptions": {
    "types": ["@types/jasmine", "@types/webpack-env"],
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "es2015",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2018.promise",
      "es2016",
      "es2017.object"
    ],
    "baseUrl": ".",
    "rootDir": "../",
    "paths": {
      "@excalibur": ["../engine/"]
    }
  },
  "include": ["./**/*Spec.ts"],
  "files": ["_boot.ts", "../engine/files.d.ts", "../engine/globals.d.ts"]
}
